{
	"name": "beroboard",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"better-auth": "^1.3.28",
			"dotenv": "^17.2.2",
			"zod": "^4.1.11",
			"typescript": "^5.8.2",
			"tsdown": "^0.15.5",
			"@prisma/client": "^6.15.0"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"install_web": "turbo -F web apps/web",
		"install_server": "turbo -F server apps/server",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @beroboard/db db:push",
		"db:studio": "turbo -F @beroboard/db db:studio",
		"db:generate": "turbo -F @beroboard/db db:generate",
		"db:migrate": "turbo -F @beroboard/db db:migrate",
		"db:migrate:create": "turbo -F @beroboard/db db:migrate:create --",
		"docker:up": "docker-compose -f docker-compose.development.yaml up -d",
		"test:integration": "docker-compose -f docker-compose.development.yaml up -d  && docker exec beroboard-db-1 bash -c 'until pg_isready -U admin -d beroboard; do echo \"‚è≥ Aguardando DB...\"; sleep 1; done' && turbo -F @beroboard/db db:migrate && bun test; docker-compose -f docker-compose.development.yaml down"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"@types/bun": "^1.2.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
